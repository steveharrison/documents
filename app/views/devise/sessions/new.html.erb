<div class="box fb">

	<h2>Sign in using your Facebook account (recommended):</h2>

	<%- if devise_mapping.omniauthable? %>
	  <%- resource_class.omniauth_providers.each do |provider| %>
	    <div class="button blue"><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %></div>
	  <% end -%>
	<% end -%>
	
</div>
	
<div class="box">
	
	<h2>Sign in with your Documents account:</h2>
	
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  	
	<%= f.email_field(:email, :placeholder => "Email") %>
	<%= f.password_field(:password, :placeholder => "Password") %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>

  <%= f.submit "Sign in" %>
<% end %>

<hr/>

<%= render "links" %>

</div>
